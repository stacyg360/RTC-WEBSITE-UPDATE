import { useState } from "react";

export default function Chatbot() {
  const [messages, setMessages] = useState([
    { sender: "bot", text: "Hi! How can we help you today?" }
  ]);
  const [input, setInput] = useState("");

  const sendMessage = () => {
    if (!input) return;
    setMessages([...messages, { sender: "user", text: input }]);
    setInput("");
  };

  return (
    <div className="fixed bottom-6 right-6 bg-white border border-rtcGold rounded-lg w-72 shadow-lg p-4">
      <h2 className="font-bold text-rtcBurgundy">RTC Chatbot</h2>
      <div className="h-40 overflow-y-auto my-2 text-sm">
        {messages.map((msg, i) => (
          <div key={i} className={msg.sender === "bot" ? "text-rtcBurgundy" : "text-gray-700"}>
            <strong>{msg.sender}:</strong> {msg.text}
          </div>
        ))}
      </div>
      <div className="flex">
        <input
          value={input}
          onChange={(e) => setInput(e.target.value)}
          className="border p-2 flex-grow rounded-l-md text-sm"
          placeholder="Type a message..."
        />
        <button onClick={sendMessage} className="bg-rtcGold text-white px-3 rounded-r-md">Send</button>
      </div>
    </div>
  );
}
export default function Footer() {
  return (
    <footer className="bg-rtcBurgundy text-white py-6 text-center mt-12">
      <p>&copy; {new Date().getFullYear()} Restore Their Childhood. All rights reserved.</p>
    </footer>
  );
}
